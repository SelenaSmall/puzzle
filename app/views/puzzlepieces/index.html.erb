<p id="notice"><%= notice %></p>

<h1>Listing Puzzlepieces</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puzzlepiece.each do |puzzlepiece| %>
      <tr>
        <td><%= puzzlepiece.number %></td>
        <td><%= link_to 'Show', puzzlepiece %></td>
        <td><%= link_to 'Edit', edit_puzzlepiece_path(puzzlepiece) %></td>
        <td><%= link_to 'Destroy', puzzlepiece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>     
    <% end %>
  </tbody>
</table>

<% @puzzlepiece.each do |puzzlepiece| %>
  <div class="puzzlepiece" class="ui-widget-content">
    <p>This puzzle piece number <%= puzzlepiece.number %></p>
  </div>
<% end %>

<% @puzzlepiece.each do |puzzlepiece| %>
  <div id="snaptarget" class="ui-widget-content">
    <p>Build the puzzle in here.</p>
  </div>
<% end %>

<script>
  $(function() {
    $( ".puzzlepiece" ).draggable({ snap: true, snap: ".ui-widget-content", snapMode: "inner" }, { containment: "#box-border-layout", scroll: false });
  });
</script>

